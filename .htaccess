# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /24._elticotico/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /24._elticotico/index.php [L]
</IfModule>

# END WordPress

