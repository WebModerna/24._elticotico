// El contenedor
.slider
    &__cuerpo
        position relative

    &__contenedor
        height 100vh
        min-height 100vh
        min-width 100vw
        overflow hidden
        position relative
        width 100vw
    
    &__item
        background-color #fff
        height 100vh
        left 0
        min-height 100vh
        min-width 100vw
        overflow hidden
        position absolute
        top 0
        width 100vw      
        

        &__leyenda
            align-items center
            display flex
            height 100vh
            right 0
            position absolute


            &__contenido
                background-color #BC4569
                color #eee
                display inline-block
                font-size 1rem
                padding 1rem
                text-align right

                strong
                    color #ddd
                    font-family: 'Cinzel', serif;
                    font-weight: bolder;
                
        
        img, figure
            display block
            height 100vh
            min-height 100vh
            width auto
        
        iframe
            background-color #fff !important
            display block
            height 100vh
            min-height 100vh
            width 100%


@media all and (min-aspect-ratio: 7/5)
    .slider
        &__item
            img, figure, iframe
                height auto
                width 100%


@media all and (min-width 720px)
    .slider
        &__item
            &__leyenda  
                &__contenido
                    opacity 0.8
                    font-size: 1.5rem