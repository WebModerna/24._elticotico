// Estilos para normalizar todo

@import "normalize"
*
	box-sizing border-box

$ancho_maximo = 650px;

// Generales de la web
body
	color #5A3928
	font-family Tahoma, Verdana, Arial, Sans-Serif
	font-size 18px
	margin 0 auto
	text-align center

a
	text-decoration none

	&:hover
	&:visited
	&:active 
		color #CB583E
		text-decoration underline
		text-shadow 0px 0px 5px #000
iframe
	border none !important
	height 480px
	width 680px
	margin-top -20px

.contenedor
	background rgba(0,0,0,0.5)
	height 100vh

.wrapper
	position relative
	overflow hidden
	margin 0 auto
	max-width $ancho_maximo
	position relative
	text-align center

.footer
	color #eee

// Logotipo
.logotipo
	margin 0 auto
	position absolute
	text-align center
	top 13px
	width 100%
	z-index 99

.la_imagen
	background rgba(255,255,255,0.75)
	box-shadow 0px 15px 20px 5px #000
	margin 0 auto
	max-width 200px
	
	img
		max-height 80px
		width 100%

// los slides
.slides
.slider__item
	background rgba(0,0,0,0.87) url("../images/bg2.jpg") center center no-repeat
	background-size cover
	border-radius 8px 
	border 8px solid white
	// box-shadow 0px 5px 25px 12px #000
	box-sizing border-box
	display block
	margin 5px auto 3em auto
	max-width $ancho_maximo
	min-height 460px
	overflow hidden
	padding 0
	width 100%
	z-index 98
	
	:first-child
		background

